---
// Premium About section for Cyanweb Solutions
---

<section id="about" class="about">
  <div class="about-background">
    <div class="grid-pattern"></div>
    <div class="gradient-orb"></div>
  </div>

  <div class="container">
    <div class="about-layout">
      <div class="about-content">
        <div class="header-badge">
          <svg width="16" height="16" viewBox="0 0 16 16" fill="none">
            <circle cx="8" cy="8" r="7" stroke="#39ff14" stroke-width="2"/>
            <path d="M8 4v4l3 3" stroke="#39ff14" stroke-width="2" stroke-linecap="round"/>
          </svg>
          <span>Our Story</span>
        </div>

        <h2>Pioneering Digital Excellence Since 1998</h2>

        <div class="story-text">
          <p class="lead">
            For over 25 years, Cyanweb Solutions has been transforming businesses through innovative digital strategies and cutting-edge technology solutions.
          </p>

          <p>
            Founded by <strong>Jonathan Huckabee</strong> and <strong>Tracii Vann</strong> in Morley, Western Australia, we've built a reputation for delivering exceptional results for SME businesses across Perth and beyond. Our journey began in the early days of web development, and we've continuously evolved to stay at the forefront of digital innovation.
          </p>

          <p>
            With Jonathan's extensive background as a Digital Developer and Technologist, currently serving as Founder and IT lead at The Streets Network, our team brings over 30 years of combined IT experience. We've been crafting information technology solutions since 1996, giving us unique insights into what truly drives business success in the digital age.
          </p>
        </div>

        <div class="founder-card">
          <div class="founder-avatar">
            <svg viewBox="0 0 100 100" fill="none">
              <circle cx="50" cy="50" r="48" fill="url(#founderGradient)"/>
              <path d="M50 45c8.284 0 15-6.716 15-15s-6.716-15-15-15-15 6.716-15 15 6.716 15 15 15zM25 75c0-13.807 11.193-25 25-25s25 11.193 25 25" stroke="white" stroke-width="4" stroke-linecap="round"/>
              <defs>
                <linearGradient id="founderGradient" x1="0" y1="0" x2="100" y2="100">
                  <stop offset="0%" stop-color="#39ff14"/>
                  <stop offset="100%" stop-color="#0dff00"/>
                </linearGradient>
              </defs>
            </svg>
          </div>
          <div class="founder-info">
            <h3>Jonathan Huckabee</h3>
            <p class="founder-title">Founder & Digital Technologist</p>
            <p class="founder-bio">
              Leading innovation at The Streets Network while bringing decades of web development and IT consulting expertise to every Cyanweb project.
            </p>
          </div>
        </div>
      </div>

      <div class="about-features">
        <div class="stat-card">
          <div class="stat-icon">
            <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
              <path d="M12 2v20m0-20L8 6m4-4l4 4"/>
              <path d="M2 12h20M2 12l4-4m-4 4l4 4"/>
            </svg>
          </div>
          <div class="stat-value">25+</div>
          <div class="stat-label">Years of Excellence</div>
          <p>Leading Perth's digital transformation since 1998</p>
        </div>

        <div class="stat-card">
          <div class="stat-icon">
            <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
              <path d="M17 21v-2a4 4 0 0 0-4-4H5a4 4 0 0 0-4 4v2"/>
              <circle cx="9" cy="7" r="4"/>
              <path d="M23 21v-2a4 4 0 0 0-3-3.87M16 3.13a4 4 0 0 1 0 7.75"/>
            </svg>
          </div>
          <div class="stat-value">500+</div>
          <div class="stat-label">Projects Delivered</div>
          <p>Successful solutions across diverse industries</p>
        </div>

        <div class="stat-card">
          <div class="stat-icon">
            <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
              <path d="M22 11.08V12a10 10 0 1 1-5.93-9.14"/>
              <polyline points="22 4 12 14.01 9 11.01"/>
            </svg>
          </div>
          <div class="stat-value">100%</div>
          <div class="stat-label">Client Satisfaction</div>
          <p>Committed to exceeding expectations</p>
        </div>

        <div class="values-card">
          <h3>Our Core Values</h3>
          <ul class="values-list">
            <li>
              <svg viewBox="0 0 20 20" fill="none">
                <path d="M10 2l2.5 6.5L19 10l-6.5 2.5L10 19l-2.5-6.5L1 10l6.5-2.5L10 2z" fill="#39ff14"/>
              </svg>
              <div>
                <strong>Innovation First</strong>
                <span>Embracing cutting-edge technologies</span>
              </div>
            </li>
            <li>
              <svg viewBox="0 0 20 20" fill="none">
                <circle cx="10" cy="10" r="8" stroke="#39ff14" stroke-width="2"/>
                <path d="M6 10l2 2 6-6" stroke="#39ff14" stroke-width="2" stroke-linecap="round"/>
              </svg>
              <div>
                <strong>Results Driven</strong>
                <span>Measurable impact on your business</span>
              </div>
            </li>
            <li>
              <svg viewBox="0 0 20 20" fill="none">
                <path d="M10 2v16m-8-8h16" stroke="#39ff14" stroke-width="2" stroke-linecap="round"/>
              </svg>
              <div>
                <strong>Transparent Partnerships</strong>
                <span>Open communication every step</span>
              </div>
            </li>
            <li>
              <svg viewBox="0 0 20 20" fill="none">
                <path d="M10 2L4 8v10h12V8l-6-6z" stroke="#39ff14" stroke-width="2" stroke-linejoin="round"/>
                <path d="M7 18v-6h6v6" stroke="#39ff14" stroke-width="2"/>
              </svg>
              <div>
                <strong>Long-term Success</strong>
                <span>Building lasting relationships</span>
              </div>
            </li>
          </ul>
        </div>
      </div>
    </div>
  </div>
</section>

<style>
  .about {
    position: relative;
    padding: 120px 20px;
    background: linear-gradient(180deg, #ffffff 0%, #f8fafb 100%);
    overflow: hidden;
  }

  .about-background {
    position: absolute;
    inset: 0;
    pointer-events: none;
  }

  .grid-pattern {
    position: absolute;
    inset: 0;
    background-image:
      linear-gradient(rgba(57, 255, 20, 0.02) 1px, transparent 1px),
      linear-gradient(90deg, rgba(57, 255, 20, 0.02) 1px, transparent 1px);
    background-size: 60px 60px;
    opacity: 0.5;
  }

  .gradient-orb {
    position: absolute;
    top: 50%;
    right: -200px;
    width: 600px;
    height: 600px;
    background: radial-gradient(circle, rgba(57, 255, 20, 0.1) 0%, transparent 70%);
    filter: blur(80px);
  }

  .container {
    position: relative;
    max-width: 1200px;
    margin: 0 auto;
  }

  .about-layout {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: 80px;
    align-items: start;
  }

  .about-content {
    position: sticky;
    top: 100px;
  }

  .header-badge {
    display: inline-flex;
    align-items: center;
    gap: 8px;
    padding: 8px 16px;
    background: rgba(57, 255, 20, 0.1);
    border: 1px solid rgba(57, 255, 20, 0.2);
    border-radius: 100px;
    color: #39ff14;
    font-size: 0.85rem;
    font-weight: 600;
    text-transform: uppercase;
    letter-spacing: 0.05em;
    margin-bottom: 24px;
  }

  .about-content h2 {
    font-size: clamp(2rem, 4vw, 3rem);
    font-weight: 800;
    color: #ffffff;
    margin-bottom: 32px;
    letter-spacing: -0.02em;
    line-height: 1.2;
  }

  .story-text {
    margin-bottom: 40px;
  }

  .lead {
    font-size: 1.35rem;
    line-height: 1.7;
    color: #ffffff;
    font-weight: 600;
    margin-bottom: 24px;
  }

  .story-text p {
    font-size: 1.05rem;
    line-height: 1.8;
    color: rgba(255, 255, 255, 0.7);
    margin-bottom: 20px;
  }

  .story-text strong {
    color: #39ff14;
    font-weight: 700;
  }

  .founder-card {
    display: flex;
    gap: 20px;
    padding: 36px;
    background: linear-gradient(135deg, rgba(57, 255, 20, 0.05) 0%, rgba(0, 255, 65, 0.05) 100%);
    border: 2px solid rgba(57, 255, 20, 0.15);
    border-radius: 24px;
    transition: all 0.4s;
  }

  .founder-card:hover {
    border-color: rgba(57, 255, 20, 0.3);
    transform: translateY(-4px);
    box-shadow: 0 12px 40px rgba(57, 255, 20, 0.1);
  }

  .founder-avatar {
    flex-shrink: 0;
    width: 80px;
    height: 80px;
  }

  .founder-avatar svg {
    width: 100%;
    height: 100%;
  }

  .founder-info h3 {
    font-size: 1.5rem;
    font-weight: 700;
    color: #ffffff;
    margin-bottom: 4px;
  }

  .founder-title {
    font-size: 1rem;
    color: #39ff14;
    font-weight: 600;
    margin-bottom: 12px;
  }

  .founder-bio {
    font-size: 0.95rem;
    line-height: 1.6;
    color: rgba(255, 255, 255, 0.7);
    margin: 0;
  }

  .about-features {
    display: flex;
    flex-direction: column;
    gap: 24px;
  }

  .stat-card {
    padding: 36px;
    background: linear-gradient(135deg, #0d0f08 0%, #1a1f0d 100%);
    border: 2px solid rgba(57, 255, 20, 0.1);
    border-radius: 24px;
    transition: all 0.4s cubic-bezier(0.4, 0, 0.2, 1);
  }

  .stat-card:hover {
    border-color: rgba(57, 255, 20, 0.3);
    transform: translateX(8px);
    box-shadow: 0 12px 40px rgba(57, 255, 20, 0.12);
  }

  .stat-icon {
    width: 48px;
    height: 48px;
    background: linear-gradient(135deg, rgba(57, 255, 20, 0.1) 0%, rgba(0, 255, 65, 0.1) 100%);
    border-radius: 12px;
    display: flex;
    align-items: center;
    justify-content: center;
    color: #39ff14;
    margin-bottom: 20px;
  }

  .stat-icon svg {
    width: 24px;
    height: 24px;
  }

  .stat-value {
    font-size: 3rem;
    font-weight: 800;
    background: linear-gradient(135deg, #39ff14 0%, #0dff00 100%);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
    line-height: 1;
    margin-bottom: 8px;
  }

  .stat-label {
    font-size: 1.1rem;
    font-weight: 700;
    color: #ffffff;
    margin-bottom: 8px;
  }

  .stat-card p {
    font-size: 0.95rem;
    color: rgba(255, 255, 255, 0.7);
    line-height: 1.5;
    margin: 0;
  }

  .values-card {
    padding: 44px;
    background: linear-gradient(135deg, #1a1f0d 0%, #2d3319 100%);
    border-radius: 24px;
    color: white;
    position: relative;
    overflow: hidden;
  }

  .values-card::before {
    content: '';
    position: absolute;
    inset: 0;
    background: radial-gradient(circle at 80% 20%, rgba(57, 255, 20, 0.15) 0%, transparent 50%);
  }

  .values-card h3 {
    position: relative;
    font-size: 1.5rem;
    font-weight: 700;
    margin-bottom: 24px;
    color: #ffffff;
  }

  .values-list {
    position: relative;
    list-style: none;
    padding: 0;
    margin: 0;
    display: flex;
    flex-direction: column;
    gap: 20px;
  }

  .values-list li {
    display: flex;
    gap: 16px;
    align-items: start;
  }

  .values-list svg {
    flex-shrink: 0;
    width: 24px;
    height: 24px;
    margin-top: 2px;
  }

  .values-list strong {
    display: block;
    font-size: 1.05rem;
    font-weight: 700;
    color: #ffffff;
    margin-bottom: 4px;
  }

  .values-list span {
    display: block;
    font-size: 0.9rem;
    color: rgba(255, 255, 255, 0.7);
    line-height: 1.5;
  }

  @media (max-width: 968px) {
    .about {
      padding: 80px 20px;
    }

    .about-layout {
      grid-template-columns: 1fr;
      gap: 60px;
    }

    .about-content {
      position: static;
    }

    .founder-card {
      flex-direction: column;
      align-items: center;
      text-align: center;
    }

    .stat-card:hover {
      transform: translateY(-4px);
    }
  }

  @media (max-width: 640px) {
    .founder-card {
      padding: 24px;
    }

    .stat-card {
      padding: 24px;
    }

    .values-card {
      padding: 32px 24px;
    }
  }

  /* Animation states */
  .header-badge, .about-content h2, .story-text, .founder-card {
    opacity: 0;
    transform: translateX(-30px);
  }

  .header-badge.animate-in {
    animation: slideInLeft 0.6s ease-out forwards;
  }

  .about-content h2.animate-in {
    animation: slideInLeft 0.7s ease-out 0.1s forwards;
  }

  .story-text.animate-in {
    animation: slideInLeft 0.8s ease-out 0.2s forwards;
  }

  .founder-card.animate-in {
    animation: slideInLeft 0.9s ease-out 0.3s forwards;
  }

  @keyframes slideInLeft {
    to {
      opacity: 1;
      transform: translateX(0);
    }
  }

  .stat-card {
    opacity: 0;
    transform: translateX(50px);
    transition: all 0.6s cubic-bezier(0.4, 0, 0.2, 1);
  }

  .stat-card.animate-in {
    opacity: 1;
    transform: translateX(0);
  }

  .values-card {
    opacity: 0;
    transform: scale(0.9);
  }

  .values-card.animate-in {
    animation: scaleUp 0.8s ease-out forwards;
  }

  @keyframes scaleUp {
    to {
      opacity: 1;
      transform: scale(1);
    }
  }

  .values-list li {
    opacity: 0;
    transform: translateX(20px);
  }

  .values-list li.animate-in {
    animation: slideInRight 0.5s ease-out forwards;
  }

  @keyframes slideInRight {
    to {
      opacity: 1;
      transform: translateX(0);
    }
  }
</style>

<script>
  // Intersection Observer for About section animations
  const observerOptions = {
    threshold: 0.2,
    rootMargin: '0px 0px -50px 0px'
  };

  const observer = new IntersectionObserver((entries) => {
    entries.forEach(entry => {
      if (entry.isIntersecting) {
        if (entry.target.classList.contains('about-content')) {
          // Animate content elements in sequence
          const badge = entry.target.querySelector('.header-badge');
          const title = entry.target.querySelector('h2');
          const story = entry.target.querySelector('.story-text');
          const founder = entry.target.querySelector('.founder-card');

          setTimeout(() => badge?.classList.add('animate-in'), 100);
          setTimeout(() => title?.classList.add('animate-in'), 200);
          setTimeout(() => story?.classList.add('animate-in'), 300);
          setTimeout(() => founder?.classList.add('animate-in'), 400);
        } else if (entry.target.classList.contains('stat-card')) {
          // Stagger stat cards
          const statCards = document.querySelectorAll('.stat-card');
          statCards.forEach((card, index) => {
            setTimeout(() => {
              card.classList.add('animate-in');

              // Animate the stat value with counter
              const statValue = card.querySelector('.stat-value');
              if (statValue && statValue.textContent) {
                animateStatCounter(statValue as HTMLElement);
              }
            }, index * 150);
          });
        } else if (entry.target.classList.contains('values-card')) {
          entry.target.classList.add('animate-in');

          // Stagger animate values list items
          const listItems = entry.target.querySelectorAll('.values-list li');
          listItems.forEach((item, index) => {
            setTimeout(() => {
              item.classList.add('animate-in');
            }, 500 + index * 100);
          });
        }

        observer.unobserve(entry.target);
      }
    });
  }, observerOptions);

  // Animate counter for stat values
  function animateStatCounter(element: HTMLElement) {
    const text = element.textContent || '';
    const hasPlus = text.includes('+');
    const hasPercent = text.includes('%');
    const targetValue = parseInt(text.replace(/\D/g, ''));

    let currentValue = 0;
    const duration = 2000;
    const startTime = performance.now();

    function update(currentTime: number) {
      const elapsed = currentTime - startTime;
      const progress = Math.min(elapsed / duration, 1);
      const easeOutQuart = 1 - Math.pow(1 - progress, 4);

      currentValue = Math.floor(targetValue * easeOutQuart);
      element.textContent = currentValue + (hasPlus ? '+' : hasPercent ? '%' : '');

      if (progress < 1) {
        requestAnimationFrame(update);
      }
    }

    requestAnimationFrame(update);
  }

  // Observe elements
  const aboutContent = document.querySelector('.about-content');
  if (aboutContent) {
    observer.observe(aboutContent);
  }

  const firstStatCard = document.querySelector('.stat-card');
  if (firstStatCard) {
    observer.observe(firstStatCard);
  }

  const valuesCard = document.querySelector('.values-card');
  if (valuesCard) {
    observer.observe(valuesCard);
  }

  // Parallax effect for About section background
  let ticking = false;

  function updateAboutParallax() {
    const scrolled = window.pageYOffset;
    const aboutSection = document.querySelector('.about') as HTMLElement;

    if (!aboutSection) return;

    const sectionTop = aboutSection.offsetTop;
    const sectionHeight = aboutSection.offsetHeight;
    const scrollProgress = (scrolled - sectionTop) / sectionHeight;

    if (scrollProgress > -0.5 && scrollProgress < 1.5) {
      const gradientOrb = aboutSection.querySelector('.gradient-orb') as HTMLElement;
      if (gradientOrb) {
        gradientOrb.style.transform = `translateY(${scrollProgress * 100}px) translateX(${scrollProgress * 50}px)`;
      }
    }

    ticking = false;
  }

  function requestTick() {
    if (!ticking) {
      requestAnimationFrame(updateAboutParallax);
      ticking = true;
    }
  }

  window.addEventListener('scroll', requestTick, { passive: true });

  // Magnetic hover effect for stat cards
  const statCards = document.querySelectorAll('.stat-card');
  statCards.forEach(card => {
    card.addEventListener('mousemove', (e) => {
      const rect = card.getBoundingClientRect();
      const x = e.clientX - rect.left;
      const y = e.clientY - rect.top;
      const centerX = rect.width / 2;
      const centerY = rect.height / 2;
      const deltaX = (x - centerX) / 15;
      const deltaY = (y - centerY) / 15;

      (card as HTMLElement).style.transform = `translate(${deltaX}px, ${deltaY}px)`;
    });

    card.addEventListener('mouseleave', () => {
      (card as HTMLElement).style.transform = '';
    });
  });
</script>
