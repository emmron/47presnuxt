---
interface Props {
  variant?: 'default' | 'success' | 'warning' | 'error';
  class?: string;
}

const {
  variant = 'default',
  class: className = ''
} = Astro.props;

const baseClasses = `badge badge-${variant} ${className}`;
---

<span class={baseClasses}>
  <slot />
</span>

<style>
  .badge {
    display: inline-flex;
    align-items: center;
    gap: 6px;
    padding: 6px 14px;
    font-size: 0.75rem;
    font-weight: 600;
    text-transform: uppercase;
    letter-spacing: 0.05em;
    border-radius: 6px;
    white-space: nowrap;
    line-height: 1;
  }

  .badge-default {
    background: rgba(57, 255, 20, 0.15);
    color: #39ff14;
    border: 1px solid rgba(57, 255, 20, 0.3);
  }

  .badge-success {
    background: rgba(0, 255, 65, 0.15);
    color: #00ff41;
    border: 1px solid rgba(0, 255, 65, 0.3);
  }

  .badge-warning {
    background: rgba(255, 193, 7, 0.15);
    color: #ffc107;
    border: 1px solid rgba(255, 193, 7, 0.3);
  }

  .badge-error {
    background: rgba(255, 59, 48, 0.15);
    color: #ff3b30;
    border: 1px solid rgba(255, 59, 48, 0.3);
  }
</style>
