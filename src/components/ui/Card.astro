---
interface Props {
  variant?: 'default' | 'highlight' | 'glass';
  hover?: boolean;
  class?: string;
}

const {
  variant = 'default',
  hover = false,
  class: className = ''
} = Astro.props;

const baseClasses = `card card-${variant} ${hover ? 'card-hover' : ''} ${className}`;
---

<div class={baseClasses}>
  <slot />
</div>

<style>
  .card {
    position: relative;
    border-radius: 16px;
    padding: 32px;
    transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
  }

  /* Default variant */
  .card-default {
    background: linear-gradient(135deg, #1a1f0d 0%, #2d3319 100%);
    border: 1px solid rgba(57, 255, 20, 0.2);
  }

  /* Highlight variant */
  .card-highlight {
    background: linear-gradient(135deg, #2d3319 0%, #1a1f0d 100%);
    border: 1px solid rgba(57, 255, 20, 0.4);
    box-shadow: 0 8px 32px rgba(57, 255, 20, 0.1);
  }

  /* Glass variant */
  .card-glass {
    background: rgba(26, 31, 13, 0.6);
    border: 1px solid rgba(57, 255, 20, 0.15);
    backdrop-filter: blur(20px) saturate(180%);
  }

  /* Hover effect */
  .card-hover {
    cursor: pointer;
  }

  .card-hover:hover {
    transform: translateY(-4px);
    border-color: #39ff14;
    box-shadow: 0 12px 40px rgba(57, 255, 20, 0.2);
  }

  @media (prefers-reduced-motion: reduce) {
    .card-hover:hover {
      transform: none;
    }
  }

  .card:focus-within {
    outline: 2px solid #39ff14;
    outline-offset: 4px;
  }

  @media (max-width: 768px) {
    .card {
      padding: 24px;
      border-radius: 12px;
    }
  }
</style>
