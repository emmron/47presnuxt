---
interface Props {
  title: string;
  source: string;
  summary: string;
  published: string;
  url: string;
  category: string;
}
const { title, source, summary, published, url, category } = Astro.props as Props;
---
<a class="card news-card" href={url} target="_blank" rel="noreferrer">
  <div class="card-top">
    <span class="tag">{category}</span>
    <span class="source">{source}</span>
  </div>
  <h3>{title}</h3>
  <p>{summary}</p>
  <span class="meta">Published {published}</span>
</a>

<style>
  .news-card {
    display: grid;
    gap: 1.2rem;
    transition: transform 180ms ease, border-color 180ms ease, box-shadow 180ms ease;
  }

  .news-card:hover {
    transform: translateY(-6px);
    border-color: rgba(59, 245, 255, 0.45);
    box-shadow: 0 18px 40px rgba(59, 245, 255, 0.25);
  }

  .card-top {
    display: flex;
    align-items: center;
    justify-content: space-between;
    color: rgba(245, 247, 255, 0.55);
    font-size: 0.85rem;
  }

  h3 {
    font-size: 1.4rem;
    line-height: 1.45;
    margin: 0;
  }

  p {
    color: var(--color-muted);
    line-height: 1.7;
    margin: 0;
  }

  .meta {
    color: rgba(245, 247, 255, 0.45);
    font-size: 0.8rem;
    letter-spacing: 0.08em;
    text-transform: uppercase;
  }

  .source {
    font-weight: 600;
    letter-spacing: 0.04em;
    text-transform: uppercase;
  }
</style>
