<style>
  .services {
    position: relative;
    padding: 120px 20px;
    background: #ffffff;
    overflow: hidden;
  }

  .services-background {
    position: absolute;
    inset: 0;
    pointer-events: none;
  }

  .bg-gradient {
    position: absolute;
    top: 0;
    left: 50%;
    transform: translateX(-50%);
    width: 800px;
    height: 800px;
    background: radial-gradient(circle, rgba(0, 188, 212, 0.08) 0%, transparent 70%);
    filter: blur(60px);
  }

  .container {
    position: relative;
    max-width: 1200px;
    margin: 0 auto;
  }

  .section-header {
    text-align: center;
    max-width: 700px;
    margin: 0 auto 80px;
  }

  .header-badge {
    display: inline-flex;
    align-items: center;
    gap: 8px;
    padding: 8px 16px;
    background: rgba(0, 188, 212, 0.1);
    border: 1px solid rgba(0, 188, 212, 0.2);
    border-radius: 100px;
    color: #00bcd4;
    font-size: 0.85rem;
    font-weight: 600;
    text-transform: uppercase;
    letter-spacing: 0.05em;
    margin-bottom: 20px;
  }

  .section-header h2 {
    font-size: clamp(2.5rem, 5vw, 3.5rem);
    font-weight: 800;
    color: #0d1117;
    margin-bottom: 20px;
    letter-spacing: -0.02em;
  }

  .section-header p {
    font-size: 1.25rem;
    line-height: 1.7;
    color: #6c757d;
  }

  .services-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(360px, 1fr));
    gap: 30px;
    margin-bottom: 80px;
  }

  .service-card {
    position: relative;
    padding: 40px;
    background: #ffffff;
    border: 2px solid rgba(0, 188, 212, 0.1);
    border-radius: 20px;
    transition: all 0.5s cubic-bezier(0.4, 0, 0.2, 1);
    animation: fadeInUp 0.6s ease-out backwards;
    animation-delay: var(--delay);
  }

  @keyframes fadeInUp {
    from {
      opacity: 0;
      transform: translateY(30px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }

  .card-glow {
    position: absolute;
    inset: -2px;
    background: linear-gradient(135deg, #00e5ff, #00bcd4, #0097a7);
    border-radius: 20px;
    opacity: 0;
    transition: opacity 0.5s;
    z-index: -1;
    filter: blur(20px);
  }

  .service-card:hover {
    transform: translateY(-8px);
    border-color: rgba(0, 188, 212, 0.3);
    box-shadow: 0 20px 60px rgba(0, 188, 212, 0.15);
  }

  .service-card:hover .card-glow {
    opacity: 0.3;
  }

  .service-icon {
    width: 64px;
    height: 64px;
    background: linear-gradient(135deg, rgba(0, 188, 212, 0.1) 0%, rgba(0, 229, 255, 0.1) 100%);
    border-radius: 16px;
    display: flex;
    align-items: center;
    justify-content: center;
    margin-bottom: 24px;
    color: #00bcd4;
    transition: all 0.4s;
  }

  .service-card:hover .service-icon {
    background: linear-gradient(135deg, #00bcd4 0%, #00e5ff 100%);
    color: #ffffff;
    transform: rotateY(180deg);
  }

  .service-icon :global(svg) {
    width: 32px;
    height: 32px;
  }

  .service-card h3 {
    font-size: 1.75rem;
    font-weight: 700;
    color: #0d1117;
    margin-bottom: 16px;
    letter-spacing: -0.01em;
  }

  .service-card p {
    font-size: 1.05rem;
    line-height: 1.7;
    color: #6c757d;
    margin-bottom: 24px;
  }

  .feature-list {
    list-style: none;
    padding: 0;
    margin: 0 0 28px 0;
    display: flex;
    flex-direction: column;
    gap: 12px;
  }

  .feature-list li {
    display: flex;
    align-items: center;
    gap: 10px;
    font-size: 0.95rem;
    color: #495057;
    font-weight: 500;
