    <meta name="description" content={description} />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700;800&display=swap" rel="stylesheet">
  </head>
  <body>
    <header class="site-header" id="header">
      <canvas class="header-canvas" id="headerCanvas"></canvas>

      <div class="morphing-bg">
        <div class="blob blob-1"></div>
        <div class="blob blob-2"></div>
        <div class="blob blob-3"></div>
      </div>

      <div class="header-gradient-border"></div>
      <div class="header-glow"></div>
      <div class="scan-line"></div>

      <div class="container header-inner">
        <a class="brand" href="/" id="brand">
          <div class="brand-icon">
            <div class="icon-rings">
              <div class="ring ring-1"></div>
              <div class="ring ring-2"></div>
              <div class="ring ring-3"></div>
            </div>
            <div class="icon-glow-effect"></div>
            <svg viewBox="0 0 40 40" fill="none">
              <circle cx="20" cy="20" r="18" stroke="url(#brandGradient)" stroke-width="2"/>
              <path d="M20 8v24M12 20h16" stroke="url(#brandGradient)" stroke-width="2" stroke-linecap="round"/>
              <defs>
                <linearGradient id="brandGradient" x1="0" y1="0" x2="40" y2="40">
                  <stop offset="0%" stop-color="#00ff41"/>
                  <stop offset="100%" stop-color="#39ff14"/>
                </linearGradient>
              </defs>
            </svg>
          </div>
          <div class="brand-text">
            <span class="brand-logo">
              <span class="letter" data-letter="C">C</span>
              <span class="letter" data-letter="Y">Y</span>
              <span class="letter" data-letter="A">A</span>
              <span class="letter" data-letter="N">N</span>
              <span class="letter" data-letter="W">W</span>
              <span class="letter" data-letter="E">E</span>
              <span class="letter" data-letter="B">B</span>
            </span>
            <span class="brand-tagline">
              <span class="tagline-text">Digital Solutions</span>
              <span class="tagline-glitch" aria-hidden="true">Digital Solutions</span>
            </span>
          </div>
        </a>

        <button class="mobile-menu-toggle" id="mobileMenuToggle" aria-label="Toggle menu">
          <span></span>
          <span></span>
          <span></span>
        </button>

        <nav id="mainNav">
