---
const { title = 'Cyanweb Solutions - Perth Web Development & Digital Marketing', description = 'Perth\'s trusted partner for web development, digital marketing, and technology consulting since 1998. Empowering SME businesses with innovative digital solutions.' } = Astro.props;
---
<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>{title}</title>
    <meta name="description" content={description} />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700;800&display=swap" rel="stylesheet">
  </head>
  <body>
    <header class="site-header" id="header">
      <div class="header-glow"></div>
      <div class="container header-inner">
        <a class="brand" href="/">
          <div class="brand-icon">
            <svg viewBox="0 0 40 40" fill="none">
              <circle cx="20" cy="20" r="18" stroke="url(#brandGradient)" stroke-width="2"/>
              <path d="M20 8v24M12 20h16" stroke="url(#brandGradient)" stroke-width="2" stroke-linecap="round"/>
              <defs>
                <linearGradient id="brandGradient" x1="0" y1="0" x2="40" y2="40">
                  <stop offset="0%" stop-color="#00e5ff"/>
                  <stop offset="100%" stop-color="#00bcd4"/>
                </linearGradient>
              </defs>
            </svg>
          </div>
          <div class="brand-text">
            <span class="brand-logo">CYANWEB</span>
            <span class="brand-tagline">Digital Solutions</span>
          </div>
        </a>

        <button class="mobile-menu-toggle" id="mobileMenuToggle" aria-label="Toggle menu">
          <span></span>
          <span></span>
          <span></span>
        </button>

        <nav id="mainNav">
          <a href="#services" class="nav-link">
            <svg width="16" height="16" viewBox="0 0 16 16" fill="none">
              <path d="M8 1l1.5 4.5L14 6.5l-4.5 1.5L8 12.5l-1.5-4.5L2 6.5l4.5-1.5L8 1z" stroke="currentColor" stroke-width="1.5" stroke-linejoin="round"/>
            </svg>
            <span>Services</span>
          </a>
          <a href="#about" class="nav-link">
            <svg width="16" height="16" viewBox="0 0 16 16" fill="none">
              <circle cx="8" cy="8" r="7" stroke="currentColor" stroke-width="1.5"/>
              <path d="M8 6v5m0-7v.5" stroke="currentColor" stroke-width="1.5" stroke-linecap="round"/>
            </svg>
            <span>About</span>
          </a>
          <a href="#contact" class="nav-link cta-link">
            <svg width="16" height="16" viewBox="0 0 16 16" fill="none">
              <path d="M14 1L6 9m8-8L8 15l-2-6-6-2 14-6z" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round"/>
            </svg>
            <span>Get Started</span>
            <svg class="arrow" width="16" height="16" viewBox="0 0 16 16" fill="none">
              <path d="M3 8h10m-4-4l4 4-4 4" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round"/>
            </svg>
          </a>
        </nav>
      </div>
    </header>
    <main>
      <slot />
    </main>
    <footer class="site-footer">
      <div class="container footer-inner">
        <div class="footer-brand">
          <span class="footer-logo">CYANWEB</span>
          <p>Empowering businesses with innovative digital solutions since 1998.</p>
          <p class="footer-location">üìç Morley, Perth, Western Australia</p>
        </div>
        <div class="footer-section">
          <h4>Services</h4>
          <div class="footer-links">
            <a href="#services">Web Development</a>
            <a href="#services">Digital Marketing</a>
            <a href="#services">eCommerce Solutions</a>
            <a href="#services">Technology Consulting</a>
          </div>
        </div>
        <div class="footer-section">
          <h4>Contact</h4>
          <div class="footer-links">
            <a href="tel:0431757449">0431 757 449</a>
            <a href="https://www.cyanweb.com.au" target="_blank" rel="noopener">www.cyanweb.com.au</a>
            <a href="https://www.facebook.com/therealcyanweb/" target="_blank" rel="noopener">Facebook</a>
            <a href="https://www.linkedin.com/in/jonathan-huckabee-53b39517a/" target="_blank" rel="noopener">LinkedIn</a>
          </div>
        </div>
      </div>
      <div class="footer-bottom">
        <p class="footer-meta">¬© {new Date().getFullYear()} Cyanweb Solutions Pty Ltd. All rights reserved.</p>
      </div>
    </footer>

    <script>
      // Header scroll effect
      const header = document.getElementById('header');
      const mobileMenuToggle = document.getElementById('mobileMenuToggle');
      const mainNav = document.getElementById('mainNav');

      let lastScroll = 0;
      const scrollThreshold = 50;

      function handleScroll() {
        const currentScroll = window.pageYOffset;

        if (currentScroll > scrollThreshold) {
          header.classList.add('scrolled');
        } else {
          header.classList.remove('scrolled');
        }

        // Hide header on scroll down, show on scroll up
        if (currentScroll > lastScroll && currentScroll > 200) {
          header.classList.add('hidden');
        } else {
          header.classList.remove('hidden');
        }

        lastScroll = currentScroll;
      }

      // Throttle scroll event
      let ticking = false;
      window.addEventListener('scroll', () => {
        if (!ticking) {
          window.requestAnimationFrame(() => {
            handleScroll();
            ticking = false;
          });
          ticking = true;
        }
      });

      // Mobile menu toggle
      mobileMenuToggle?.addEventListener('click', () => {
        mainNav?.classList.toggle('active');
        mobileMenuToggle.classList.toggle('active');
        document.body.classList.toggle('menu-open');
      });

      // Close mobile menu on link click
      document.querySelectorAll('.nav-link').forEach(link => {
        link.addEventListener('click', () => {
          mainNav?.classList.remove('active');
          mobileMenuToggle?.classList.remove('active');
          document.body.classList.remove('menu-open');
        });
      });

      // Close mobile menu on escape key
      document.addEventListener('keydown', (e) => {
        if (e.key === 'Escape' && mainNav?.classList.contains('active')) {
          mainNav.classList.remove('active');
          mobileMenuToggle?.classList.remove('active');
          document.body.classList.remove('menu-open');
        }
      });
    </script>
  </body>
</html>

<style>
  * {
    margin: 0;
    padding: 0;
    box-sizing: border-box;
  }

  body {
    font-family: 'Inter', -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, Oxygen, Ubuntu, Cantarell, sans-serif;
    line-height: 1.6;
    color: #333;
    background: #ffffff;
  }

  body.menu-open {
    overflow: hidden;
  }

  a {
    text-decoration: none;
    color: inherit;
    transition: all 0.3s ease;
  }

  .container {
    max-width: 1200px;
    margin: 0 auto;
    padding: 0 20px;
  }

  /* Header Styles */
  .site-header {
    position: fixed;
    top: 0;
    left: 0;
    right: 0;
    z-index: 1000;
    background: transparent;
    border-bottom: 1px solid transparent;
    transition: all 0.4s cubic-bezier(0.4, 0, 0.2, 1);
    transform: translateY(0);
  }

  .site-header.scrolled {
    background: rgba(10, 14, 39, 0.85);
    border-bottom-color: rgba(0, 229, 255, 0.1);
    backdrop-filter: blur(20px);
    box-shadow: 0 4px 30px rgba(0, 0, 0, 0.3);
  }

  .site-header.hidden {
    transform: translateY(-100%);
  }

  .header-glow {
    position: absolute;
    inset: 0;
    background: linear-gradient(90deg, transparent, rgba(0, 229, 255, 0.1), transparent);
    opacity: 0;
    transition: opacity 0.4s;
    pointer-events: none;
  }

  .site-header.scrolled .header-glow {
    opacity: 1;
  }

  .header-inner {
    display: flex;
    align-items: center;
    justify-content: space-between;
    padding: 1.5rem 20px;
    gap: 3rem;
    position: relative;
  }

  .site-header.scrolled .header-inner {
    padding: 1rem 20px;
  }

  .brand {
    display: flex;
    align-items: center;
    gap: 12px;
    position: relative;
    z-index: 10;
    transition: all 0.3s ease;
  }

  .brand:hover {
    transform: scale(1.05);
  }

  .brand-icon {
    width: 40px;
    height: 40px;
    display: flex;
    align-items: center;
    justify-content: center;
    position: relative;
  }

  .brand-icon::before {
    content: '';
    position: absolute;
    inset: -4px;
    background: radial-gradient(circle, rgba(0, 229, 255, 0.2) 0%, transparent 70%);
    border-radius: 50%;
    opacity: 0;
    transition: opacity 0.3s;
  }

  .brand:hover .brand-icon::before {
    opacity: 1;
  }

  .brand-icon svg {
    width: 100%;
    height: 100%;
    filter: drop-shadow(0 0 8px rgba(0, 229, 255, 0.3));
  }

  .brand-text {
    display: flex;
    flex-direction: column;
    gap: 2px;
  }

  .brand-logo {
    font-size: 1.5rem;
    font-weight: 800;
    letter-spacing: -0.02em;
    color: #ffffff;
    line-height: 1;
  }

  .brand-tagline {
    font-size: 0.7rem;
    text-transform: uppercase;
    letter-spacing: 0.15em;
    color: rgba(255, 255, 255, 0.6);
    font-weight: 600;
  }

  .site-header.scrolled .brand-logo {
    color: #ffffff;
  }

  .site-header.scrolled .brand-tagline {
    color: #00e5ff;
  }

  .mobile-menu-toggle {
    display: none;
    flex-direction: column;
    gap: 5px;
    background: none;
    border: none;
    cursor: pointer;
    padding: 8px;
    z-index: 1001;
    position: relative;
  }

  .mobile-menu-toggle span {
    width: 24px;
    height: 2px;
    background: #ffffff;
    border-radius: 2px;
    transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
  }

  .mobile-menu-toggle.active span:nth-child(1) {
    transform: translateY(7px) rotate(45deg);
  }

  .mobile-menu-toggle.active span:nth-child(2) {
    opacity: 0;
  }

  .mobile-menu-toggle.active span:nth-child(3) {
    transform: translateY(-7px) rotate(-45deg);
  }

  nav {
    display: flex;
    align-items: center;
    gap: 2.5rem;
  }

  .nav-link {
    display: inline-flex;
    align-items: center;
    gap: 6px;
    color: rgba(255, 255, 255, 0.85);
    font-size: 0.95rem;
    font-weight: 600;
    position: relative;
    padding: 8px 0;
    transition: all 0.3s ease;
  }

  .nav-link svg:not(.arrow) {
    opacity: 0;
    transform: translateX(-8px);
    transition: all 0.3s ease;
  }

  .nav-link:hover svg:not(.arrow) {
    opacity: 0.8;
    transform: translateX(0);
  }

  .nav-link:hover {
    color: #00e5ff;
  }

  .nav-link::after {
    content: '';
    position: absolute;
    bottom: 0;
    left: 0;
    width: 0;
    height: 2px;
    background: linear-gradient(90deg, #00e5ff, #00bcd4);
    transition: width 0.3s ease;
  }

  .nav-link:hover::after {
    width: 100%;
  }

  .nav-link.cta-link {
    background: linear-gradient(135deg, #00bcd4 0%, #0097a7 100%);
    color: #ffffff;
    padding: 12px 24px;
    border-radius: 10px;
    font-weight: 700;
    box-shadow: 0 4px 15px rgba(0, 188, 212, 0.3);
    border: 1px solid rgba(0, 229, 255, 0.2);
  }

  .nav-link.cta-link::after {
    display: none;
  }

  .nav-link.cta-link .arrow {
    opacity: 1;
    transition: transform 0.3s ease;
  }

  .nav-link.cta-link:hover {
    transform: translateY(-2px);
    box-shadow: 0 6px 20px rgba(0, 188, 212, 0.5);
    color: #ffffff;
  }

  .nav-link.cta-link:hover .arrow {
    transform: translateX(4px);
  }

  .site-header.scrolled .nav-link {
    color: rgba(255, 255, 255, 0.85);
  }

  .site-header.scrolled .nav-link:hover {
    color: #00e5ff;
  }

  /* Footer Styles */
  .site-footer {
    margin-top: 0;
    background: linear-gradient(135deg, #0d1117 0%, #1a1f2e 100%);
    color: white;
    padding: 60px 20px 0;
  }

  .footer-inner {
    display: grid;
    grid-template-columns: 1.5fr 1fr 1fr;
    gap: 40px;
    padding-bottom: 40px;
    border-bottom: 1px solid rgba(255, 255, 255, 0.1);
  }

  .footer-brand {
    display: flex;
    flex-direction: column;
    gap: 15px;
  }

  .footer-logo {
    font-size: 1.8rem;
    font-weight: 800;
    background: linear-gradient(135deg, #00bcd4 0%, #00e5ff 100%);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
    letter-spacing: -0.02em;
  }

  .footer-brand p {
    color: #b4b8c5;
    line-height: 1.7;
    margin: 0;
  }

  .footer-location {
    color: #00bcd4 !important;
    font-weight: 500;
  }

  .footer-section h4 {
    color: #00bcd4;
    margin-bottom: 15px;
    font-size: 1.1rem;
    font-weight: 600;
  }

  .footer-links {
    display: flex;
    flex-direction: column;
    gap: 10px;
  }

  .footer-links a {
    color: #b4b8c5;
    font-size: 0.95rem;
  }

  .footer-links a:hover {
    color: #00bcd4;
    padding-left: 5px;
  }

  .footer-bottom {
    padding: 25px 20px;
  }

  .footer-meta {
    text-align: center;
    color: rgba(180, 184, 197, 0.6);
    font-size: 0.9rem;
  }

  @media (max-width: 968px) {
    .mobile-menu-toggle {
      display: flex;
    }

    nav {
      position: fixed;
      top: 0;
      right: -100%;
      width: 300px;
      height: 100vh;
      background: linear-gradient(135deg, #0a0e27 0%, #1a1d3a 100%);
      flex-direction: column;
      align-items: flex-start;
      gap: 0;
      padding: 100px 30px 30px;
      transition: right 0.4s cubic-bezier(0.4, 0, 0.2, 1);
      box-shadow: -10px 0 40px rgba(0, 0, 0, 0.5);
    }

    nav.active {
      right: 0;
    }

    .nav-link {
      width: 100%;
      padding: 16px 20px;
      border-bottom: 1px solid rgba(255, 255, 255, 0.08);
      font-size: 1.1rem;
    }

    .nav-link svg:not(.arrow) {
      opacity: 0.8;
      transform: translateX(0);
    }

    .nav-link.cta-link {
      margin-top: 20px;
      justify-content: center;
      border-bottom: none;
    }

    .header-inner {
      padding: 1rem 20px;
    }

    .footer-inner {
      grid-template-columns: 1fr;
      gap: 30px;
    }
  }

  @media (max-width: 640px) {
    nav {
      width: 100%;
      right: -100%;
    }

    .brand-logo {
      font-size: 1.3rem;
    }

    .brand-tagline {
      font-size: 0.65rem;
    }

    .brand-icon {
      width: 36px;
      height: 36px;
    }
  }
</style>
