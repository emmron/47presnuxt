  }

  .nav-link.cta-link::after {
    display: none;
  }

  .nav-link.cta-link .arrow {
    opacity: 1;
    transition: transform 0.3s ease;
  }

  .nav-link.cta-link:hover {
    transform: translateY(-2px) scale(1.05);
