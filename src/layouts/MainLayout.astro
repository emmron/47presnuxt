    color: #ffffff;
    padding: 12px 24px;
    border-radius: 10px;
    font-weight: 700;
    box-shadow: 0 4px 15px rgba(0, 188, 212, 0.3);
    border: 1px solid rgba(0, 229, 255, 0.2);
    position: relative;
    overflow: hidden;
  }

  .cta-shimmer {
    position: absolute;
    top: 0;
    left: -100%;
    width: 100%;
    height: 100%;
    background: linear-gradient(90deg, transparent, rgba(255, 255, 255, 0.3), transparent);
    animation: shimmer 3s infinite;
  }

  @keyframes shimmer {
    0% { left: -100%; }
