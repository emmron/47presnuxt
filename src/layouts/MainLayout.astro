  }

  .nav-link:hover {
    color: #00e5ff;
  }

  .nav-link::after {
    content: '';
    position: absolute;
    bottom: 0;
    left: 50%;
    transform: translateX(-50%);
    width: 0;
    height: 2px;
    background: linear-gradient(90deg, #00e5ff, #00bcd4);
    transition: width 0.3s ease;
    border-radius: 2px;
  }

